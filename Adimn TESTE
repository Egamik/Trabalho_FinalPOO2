import java.awt.GridLayout;
import javax.swing.GroupLayout;
import javax.swing.JPanel;
import javax.swing.JFrame;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JTextField;

public class Admin extends JFrame{
    
    private JPanel login, page;
    private JDialog popup;
    private JTextField username, password;
    private JLabel lbl0, lbl1, lbl2; 
    
    public Admin(){
        this.login = new JPanel();
        GridLayout logLy = new GridLayout(5, 1);
        this.login.setLayout(logLy);
        this.lbl0 = new JLabel("Admin");
        this.lbl1 = new JLabel("Username: ");
        this.lbl2 = new JLabel("Password: ");
        this.username = new JTextField(15);
        this.password = new JTextField(15);
        login.add(lbl0);
        login.add(lbl1);
        login.add(username);
        login.add(lbl2);
        login.add(password);
        
        this.page = new JPanel();
        GroupLayout pageLy = new GroupLayout(page);
        GroupLayout.SequentialGroup hgroup = pageLy.createSequentialGroup();
        
