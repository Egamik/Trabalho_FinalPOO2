
import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.NoSuchElementException;
import java.util.Scanner;


public class RegTEST {
  private static Scanner input;
  public static String newLine = System.getProperty("line.separator");
  public static char file = 'e';
  
  public static void writeFile(String s) {
      String ff = "";
    switch(file){
        case('p'):
            ff = "products.txt";
        case('e'):
            ff = "extract.txt";
        case('f'):
            ff = "employ.txt";
    }  
    try {
    	File file1 = new File(ff);
    	if(!file1.exists()) {
    		file1.createNewFile();
    	}
    	PrintWriter pw = new PrintWriter(file1);
    	pw.println(readFile() + "\n" + s);
    	pw.close();
    } catch (IOException e) {
    	e.printStackTrace();
    }

  }
  
  public static void openFile() throws FileNotFoundException {
	  switch(file){
              case('p'):
                  input = new Scanner(new File("products.txt"));
              case('e'):
                  input = new Scanner(new File("extract.txt"));
              case('f'):
                  input = new Scanner(new File("employ.txt"));
          }
  }
  
  public static String readFile() {
	String ret = "";
	try{
            openFile();
        }catch(FileNotFoundException e){
              
        }
        while(input.hasNext()) {
            ret += "\n" + input.nextLine();
        }
	  closeFile();
	  return ret;
  }
  
  public static void closeFile() {
	  if(input != null) {
		  input.close();
	  }
  }
  
  public static void main(String[] args){
      
  }
}
